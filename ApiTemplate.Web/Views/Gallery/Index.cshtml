@using ApiTemplate.Business.ViewModels
@model IEnumerable<AnimalViewModel>

@{
    ViewData["Title"] = "Animal Pets Gallery";
}

<div class="gallery-title text-center">
    <h1>The Animal Gallery</h1>
    <p>Some photos of a lifetime of pet ownership</p>
</div>


@foreach (AnimalViewModel animal in Model)
{
    <div class="row">
        <div class="card-body">
            <h5 class="card-title">Name: @animal.Name (@animal.AnimalType)</h5>
            <p class="card-text">Breed: @animal.Breed</p>
            <p class="card-text"><small class="text-muted">@animal.Description</small></p>
        </div>
        <div class="my-gallery">
            <div class="row">
                @foreach (PhotoViewModel photo in animal.Photos)
                {
                    <div class="col-sm-12 col-md-3 gallery-item">
                        <a class="lightbox img-fluid" href="@Url.Content(photo.FilePath)" data-caption="Pet Image">
                            <img src="@Url.Content(photo.FilePath)" />
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
}

</div>
<style type="text/css">
    .gallery-item {
        margin-bottom: 30px;
        transition: transform 0.3s ease;
    }

    .gallery-item:hover {
        transform: scale(1.03);
    }

    .gallery-item img {
        width: 100%;
        height: 300px;
        object-fit: cover;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .gallery-title {
        background: linear-gradient(45deg, #0124C0, #01AE9A);
        padding: 40px 0;
        margin-bottom: 40px;
        color: white;
        border-radius: 25px 25px 25px 25px;
    }
</style>

<script>
    window.addEventListener('load', function() {
      baguetteBox.run('.my-gallery', {
            animation: 'fadeIn',
            noScrollbars: true
        });
    });
</script>